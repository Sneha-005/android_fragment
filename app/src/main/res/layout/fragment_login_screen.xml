<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginScreen"
    android:background="@android:color/white"
    android:id="@+id/login_screen">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginScreenActivity"
        android:fontFamily="poppins">


    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login here"
        android:textSize="30sp"
        android:textColor="@color/blue"
        android:textAlignment="center"
        android:lineHeight="45sp"
        android:textFontWeight="700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/subText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome back \nyou've been missed!"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:lineHeight="30sp"
        android:textFontWeight="600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="140dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Email"
        android:textColorHint="@color/black"
        android:drawablePadding="12dp"
        android:paddingLeft="15dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:textColorHint="@color/black"
        android:layout_height="60dp"
        android:hint="Password"
        android:drawablePadding="12dp"
        android:paddingLeft="15dp"
        android:layout_marginRight="25dp"
        android:inputType="textPassword"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot your password?"
        android:textSize="14sp"
        android:textColor="@color/blue"
        android:lineHeight="21sp"
        android:textFontWeight="600"
        android:textAlignment="viewEnd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="420dp"
        android:layout_marginRight="5dp" />

    <Button
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Sign in"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cornerRadius="10dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:layout_marginRight="15dp"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="25dp"
        android:textFontWeight="300" />

    <TextView
        android:id="@+id/new_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create new account"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:lineHeight="21sp"
        android:textFontWeight="600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="550dp" />

    <TextView
        android:id="@+id/option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="or continue with"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:lineHeight="21sp"
        android:textFontWeight="600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="620dp" />

    <ImageButton
        android:id="@+id/google"
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:layout_marginTop="652dp"
        android:layout_marginLeft="88dp"
        android:src="@drawable/google_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/facebook"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:background="@drawable/imagebox"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:layout_marginTop="652dp"
        app:layout_constraintStart_toEndOf="@+id/google"
        app:layout_constraintEnd_toStartOf="@+id/apple"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/facebook_logo"
        android:background="@drawable/imagebox"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="10dp"/>

    <ImageButton
        android:id="@+id/apple"
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:layout_marginTop="652dp"
        android:layout_marginRight="65dp"
        android:src="@drawable/apple_logo"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:background="@drawable/imagebox"
        app:layout_constraintStart_toEndOf="@+id/facebook"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="10dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>